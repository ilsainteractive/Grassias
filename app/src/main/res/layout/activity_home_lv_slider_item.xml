<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8.5">

    <ImageView
        android:id="@+id/home_lv_bottom_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5"
        android:src="@mipmap/home_lv_item_bottom_back1" />

    <com.ilsa.grassis.library.RegularTextView
        android:id="@+id/home_lv_bottom_txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center|top"
        android:text="Blackberry flavored Kiva bars \n $30 " />
</LinearLayout>