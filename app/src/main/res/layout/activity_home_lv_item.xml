<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.ilsa.grassis.activites.HomeActivity">

    <LinearLayout
        android:id="@+id/home_lv_top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.5">

                    <ImageView
                        android:id="@+id/home_lv_top_section_img"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/home_list_top_back" />

                    <LinearLayout
                        android:id="@+id/home_lv_top_section_texts_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="7">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.8"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.4"
                            android:baselineAligned="false">

                            <com.ilsa.grassis.library.RegularTextView
                                android:id="@+id/home_list_top_title"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:gravity="center|left"
                                android:text="Malibu Community  Collective"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0">

                            <com.ilsa.grassis.library.RegularTextView
                                android:id="@+id/home_list_top_sub_title"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:gravity="center|top"
                                android:text="2.3 miles  |  OPEN till 8:00pm"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.8"></LinearLayout>
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_edge_rectangle_base"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/home_list_box_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_lv_top_cart" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="#f6aec4" />

                <ImageView
                    android:id="@+id/home_list_box_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_lv_top_detail" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="5">

        <com.ilsa.grassis.library.BoldSFTextView
            android:id="@+id/home_lv_bottom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".3"
            android:gravity="center"
            android:text="Whatâ€™s New"
            android:textColor="#474747" />

        <LinearLayout
            android:id="@+id/home_lv_bottom_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4.7">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.rd.PageIndicatorView
                    android:id="@+id/pageIndicatorView"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    attrs:piv_animationType="worm"
                    attrs:piv_dynamicCount="true"
                    attrs:piv_interactiveAnimation="true"
                    attrs:piv_padding="0dp"
                    attrs:piv_radius="35dp"
                    attrs:piv_selectedColor="#c7c7c7"
                    attrs:piv_unselectedColor="#f2f2f2"
                    attrs:piv_viewPager="@id/viewPager" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_lv_bottom_section_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#f7f7f7"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:padding="15dp"
                android:src="@mipmap/home_lv_bottom_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6.5"
                android:orientation="vertical">

                <com.ilsa.grassis.library.RegularTextView
                    android:id="@+id/home_lv_bottom_section_2_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:paddingBottom="2dp"
                    android:text="Skip the line, order online."
                    android:textColor="#474747"
                    android:textStyle="bold" />

                <com.ilsa.grassis.library.RegularTextView
                    android:id="@+id/home_lv_bottom_section_2_subTitle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3"
                    android:gravity="top"
                    android:text="Order online and have your meds ready when you arrive."
                    android:textColor="#474747" />
            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f7f7f7"
                android:scaleType="centerCrop"
                android:src="@mipmap/home_list_bottom_back" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="horizontal">

                    <com.ilsa.grassis.library.BoldSFTextView
                        android:id="@+id/home_lv_bottom_section_2_txt_per"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="top"
                        android:text="30% "
                        android:textColor="@color/white" />

                    <com.ilsa.grassis.library.ThinTextView
                        android:id="@+id/home_lv_bottom_section_2_txt_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="top"
                        android:text="OFF"
                        android:textColor="@color/white" />
                </LinearLayout>

                <com.ilsa.grassis.library.ThinTextView
                    android:id="@+id/home_lv_bottom_section_2_txt_products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:text="Kiva Products"
                    android:textColor="@color/white" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/home_lv_bottom_section_22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f7f7"
            android:orientation="vertical"
            android:paddingBottom="40dp"
            android:paddingTop="40dp">

            <com.ilsa.grassis.library.RegularTextView
                android:id="@+id/home_lv_bottom_section_3_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="Disclaimer"
                android:textColor="#474747"
                android:textStyle="bold" />

            <com.ilsa.grassis.library.RegularTextView
                android:id="@+id/home_lv_bottom_section_3_subTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1.3"
                android:gravity="center|left"
                android:text="Apple does not support or condone the sale, purchase or use of cannabis and in no way is associated with Grassias or any of itâ€™s affiliates."
                android:textColor="#474747" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
