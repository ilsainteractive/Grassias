<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_weight="5"
    android:background="#e61856"
    android:orientation="horizontal"
    tools:context="com.ilsa.grassis.activites.AddToCart">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="TOTAL"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />

    <com.ilsa.grassis.library.RegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-5dp"
        android:text="$"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp" />

    <com.ilsa.grassis.library.BoldSFTextView
        android:id="@+id/add_to_cart_bottom_totalPrie"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="$200"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp" />


    <com.ilsa.grassis.library.RegularTextView
        android:id="@+id/add_to_cart_bottom_checkOut"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_2sdp"
        android:layout_weight="3"
        android:background="@drawable/round_edge_addtocart_bottom"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="CHECKOUT"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp" />
</LinearLayout>

