<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="30dp"
    tools:context="com.ilsa.grassis.activites.MenuActivity">

    <ImageView
        android:id="@+id/menu_home_lv_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="30dp"
        android:src="@mipmap/menu_lv_item_img" />

    <com.ilsa.grassis.library.RegularTextView
        android:id="@+id/menu_home_lv_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingRight="20dp"
        android:text="Extracts"
        android:textColor="@color/black" />
</LinearLayout>
